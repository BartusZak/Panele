@model IEnumerable<Panele.Models.Product>
@{
    Layout = null;
   
   
    
}



<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Zarządzanie zawartością strony</title>
    <link href="~/Content/ManageStyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/listChecker.js"></script>
</head>
<body>
    <div id="manageContainer">
        <div id="leftPanel">
            <span>MY ADMIN Interface</span>
            <ul>

                <li>@Html.ActionLink("Dodaj produkt", "AddProduct", "Manage")</li>
                <li>@Html.ActionLink("Usuń produkty", "Details", "Manage")</li>
                <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                <li>@Html.ActionLink("Wyloguj", "EditDetails", "Manage")</li>

            </ul>
        </div>
        <div id="rightPanel">
            <div id="infoDesk">
              <div>
                  <label>Wyszukaj we wszystkich kategoriach</label>
                  @using (Html.BeginForm())
                  {
                      <button class="searchButton" style= id="first1" onclick="location.href='@Url.Action("Index")'">
                          <span>Znajdź</span>
                      </button>
                          @Html.TextBox("searchString",null,new { @class = "form-control textWidth" })
                      <div style="clear: both;"></div>

                  }
              </div>
            </div>
        </div>

        <div id="cont">
            <table class="products">
                <tr>
                    <th>Id</th>
                    <th>@Html.ActionLink("Nazwa", "Index", new { sortBy = ViewBag.byName })</th>
                    <th>@Html.ActionLink("Firma", "Index", new { sortBy = ViewBag.byCompany })</th>
                    <th>@Html.ActionLink("Cena", "Index", new { sortBy = ViewBag.byCost })</th>
                    <th>@Html.ActionLink("Data", "Index", new { sortBy = ViewBag.byDate })</th>
                    <th>@Html.ActionLink("Status", "Index", new { sortBy = ViewBag.byState })</th>
                    <th>@Html.ActionLink("Rodzaj", "Index", new { sortBy = ViewBag.byType })</th>
                    <th>@Html.ActionLink("Materiał", "Index", new { sortBy = ViewBag.byMaterial })</th>
                    <th>Opcje</th>
                </tr>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>
                            @element.Id
                        </td>
                        <td>
                            @element.Name
                        </td>
                        <td>
                            @element.Company
                        </td>
                        <td>
                            @element.Cost
                        </td>
                        <td>
                            @element.AddDate
                        </td>
                        <td>
                            @element.State
                        </td>
                        <td>
                            @element.Type
                        </td>
                        <td>
                            @element.Material
                        </td>

                        <td>
                            @Html.ActionLink("Edytuj", "Edit", "Manage", new { id = element.Id }, null)
                        @Html.ActionLink("Usuń", "Delete", "Manage", new { id = element.Id }, null)
                        @Html.ActionLink("Szczegóły", "Details", "Manage", new { id = element.Id }, null)
                    </td>


                </tr>
                }

            </table>
        </div>
        <div style="clear: both;"></div>


    </div>

</body>
</html>
