            idPhoto++; if (idPhoto > 4) idPhoto = 1;
            var file = document.getElementById("slide" + idPhoto).innerHTML;
            document.getElementById("place").innerHTML = file;
            $("#place").fadeIn(500);
            setTimeout("changePhoto()", 5000);
            setTimeout("hide()", 4500);
        }
    </script>

    
